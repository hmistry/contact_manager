%p#notice= notice

%p
  %b First name:
  = @person.first_name
%p
  %b Last name:
  = @person.last_name

%ul
  - @person.phone_numbers.each do |phone|
    %li
      = phone.number
      = link_to 'edit', edit_phone_number_path(phone)
      \|
      = link_to 'delete', phone_number_path(phone), method: :delete
  %li= link_to 'Add phone number', new_phone_number_path(contact_id: @person.id, contact_type: "Person")

%ul
  - @person.email_addresses.each do |email|
    %li
      = email.address
      = link_to 'edit', edit_email_address_path(email), id: 'edit_email'
      \|
      = link_to 'delete', email_address_path(email), method: :delete, id: 'delete_email'
  %li= link_to 'Add email address', new_email_address_path(person_id: @person.id), id: 'new_email_address'

= link_to 'Edit', edit_person_path(@person)
\|
= link_to 'Back', people_path
