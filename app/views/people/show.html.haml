%p#notice= notice

%p
  %b First name:
  = @person.first_name
%p
  %b Last name:
  = @person.last_name

%ul
  - @person.phone_numbers.each do |phone|
    %li
      = phone.number
      = link_to 'edit', edit_phone_number_path(phone)
      \|
      = link_to 'delete', phone_number_path(phone), method: :delete
  %li= link_to 'Add phone number', new_phone_number_path(person_id: @person.id)

= link_to 'Edit', edit_person_path(@person)
\|
= link_to 'Back', people_path
